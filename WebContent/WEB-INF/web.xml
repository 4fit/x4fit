<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns="http://xmlns.jcp.org/xml/ns/javaee"
	xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
	id="WebApp_ID" version="4.0">
	<display-name>x4fit</display-name>
	<welcome-file-list>
		<welcome-file>home</welcome-file>
	</welcome-file-list>
	<servlet>
		<servlet-name>Profile</servlet-name>
		<servlet-class>controller.profileController</servlet-class>
	</servlet>

	<servlet-mapping>
		<servlet-name>controller.galleryController</servlet-name>
		<url-pattern>/gallery</url-pattern>
	</servlet-mapping>

	<servlet-mapping>
		<servlet-name>controller.profileController</servlet-name>
		<url-pattern>/profile</url-pattern>
	</servlet-mapping>
	
	<session-config>
  		<cookie-config>
    		<secure>true</secure>
    		<http-only>true</http-only>
  		</cookie-config>
	</session-config>

</web-app>